<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>First name</th>
		<th>Last name</th>
		<th>&nbsp;</th>
	</tr>
	
	<% mentors.each_with_index do |mentor, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link mentor.first_name, casein_mentor_path(mentor) %></td>
			<td><%= casein_table_cell_link mentor.last_name, casein_mentor_path(mentor) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_mentor_path(mentor), :method => :delete, :data => { :confirm => "Are you sure you want to delete this mentor?" }) %>
			</td>
		</tr>
	<% end %>
</table>